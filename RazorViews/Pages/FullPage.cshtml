@using RazorViews
@model (string, object)
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://unpkg.com/htmx.org@1.9.6"
        integrity="sha384-FhXw7b6AlE/jyjlZH5iHa/tTe9EpJ1Y55RjcgPbjeWMskSxZt1v9qkxLJWNJaGni"
        crossorigin="anonymous"></script>
    <script src="https://cdn.tailwindcss.com"></script>

    <title>HTMX + dotnet</title>
</head>

<body style="width: 100vw; height: 100vh; overflow: hidden; padding: 0; margin: 0;">


    <div class="flex w-full h-full bg-green-400 flex-row">
        <div class="flex-shrink bg-blue-50" id="navbar-container">
            @await Html.PartialAsync("~/Views/Shared/NavBar/NavBar.cshtml")
        </div>
        <div class="flex-grow w-full h-full bg-red-500" id="route-container">
            @await Html.PartialAsync(Model.Item1, Model.Item2)
        </div>
    </div>

</body>

</html>